<!DOCTYPE HTML>
<html>
	<head>
		<title>Movies by CD</title>
		<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
		<link rel="stylesheet" href="/stylesheets/main.css" />
	</head>
	<body class="is-preload">

		<!-- Wrapper -->
			<div id="wrapper">

        <!-- Header -->
        <header>
          <h1>TP Movies by CD</h1>
          </header>
      
        <!-- Nav -->
        <nav id="nav">
            <ul>
                <li><a href="/" class="active">Peliculas</a></li>
                <li><a href="/actores">Actores</a></li>
                <li><a href="/generos">Generos</a></li>
            </ul>
        </nav>
					

				<!-- Main -->
					<div id="main">

						<!-- Introduction -->
							<section id="intro" class="main">
								<div>
                  
									<div class="content">
                   
                    <h1>Listado de Películas</h1>
                    <nav>
                      <ul>
                          <li><a href="/peliculas/crear" class="active"><i class="fa fa-plus-square"></i> &nbsp; Crear Nueva</a></li>
                      </ul>
                  </nav> 
                      <table>
                        <tr>
                          <th>#</th>
                          <th>Título</th>
                          <th>Premios</th>
                          <th>Duración</th>
                          <th>Fecha Estreno</th>
                          <th>Rating</th>
                          <th>Género</th>
                          <th></th>
                        </tr>
                        <%for (let i=0;i < peliculas.length;i++){%>
                          <tr>
                            <th><%=i+1%></th>
                            <th><a href="/peliculas/detalle/<%=peliculas[i].id%>"><%=peliculas[i].title%>&nbsp;<i class='fas fa-pencil-alt'></i></a></th>
                            <th><%=peliculas[i].awards;%>&nbsp;<!--i class="fa fa-trophy"></i --></th>
                            <th><%=peliculas[i].length;%></th>
                            <th><%=peliculas[i].release_date;%></th>
                            <th><%=peliculas[i].rating;%>&nbsp;<i class='fas fa-star'></i></th>
                            <th><%if (peliculas[i].genre_id){%>
                              <a href="/generos/detalle/<%=peliculas[i].genre_id%>"><%=peliculas[i].genero.name%></a>
                            <%}%></th>
                            <th><a href="/peliculas/eliminar/<%=peliculas[i].id%>"><i class='fas fa-trash-alt'></i></a></th>
                          </tr>
                          <%}%>

                      </table>

                   									
									</div>
								</div>
							</section>

					
				<!-- Footer -->
					<footer id="footer">
					<p class="copyright">Cintia Diaz &copy; 2020.</p>
					</footer>

			</div>


	</body>
</html>

